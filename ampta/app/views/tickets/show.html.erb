<% content_for :title, "Ticket" %>

<ul class="breadcrumb">
  <li><%= link_to "Home", home_path %> <span class="divider">/</span></li>
  <li><%= link_to "Projects", projects_path %> <span class="divider">/</span></li>
  <li><%= link_to @ticket.project.name, project_path(@ticket.project) %> <span class="divider">/</span></li>
  <li><%= link_to "Tickets", project_tickets_path(@ticket.project) %> <span class="divider">/</span></li>
  <li class="active"><%= @ticket.name %></li>
</ul>

<h3><%= @ticket.name %></h3>
<p id="notice"><%= notice %></p>

<h4>Description</h4>
<p><%= @ticket.description %></p>

<h4>Time period</h4>
<p><strong>Start:</strong> <%= @ticket.start_date.to_date.to_formatted_s(:long_ordinal) %></p>
<p><strong>End:</strong> <%= @ticket.end_date.to_date.to_formatted_s(:long_ordinal) %></p>

<h4>Status</h4>
<p><%= @ticket.status.status_name %></p>

<h4>Owner</h4>
<p><%= link_to "#{@ticket.user.first_name} #{@ticket.user.last_name}", user_path(@ticket.user) %></p>

<% if @owner_menu %>
	<p class="btn btn-small">
		<%= link_to 'Edit ticket', edit_project_ticket_path(@ticket.project, @ticket) %>
	</p>
	<p class="btn btn-small">
		<%= link_to 'Delete ticket', @ticket, :confirm => 'Are you sure you want to delete this ticket?', :method => :delete %>
	</p>
<% end %>