<% content_for :title, "Tickets" %>

<%= render :partial => "layouts/sidenav" %>
<div class="main pull-left">

	<h3>Tickets for project <%= Project.find(params[:project_id]).name %></h3>
	<% if @tickets.size > 0 %>
		<ul>
		<% @tickets.each do |t| %>
			<li><%= link_to t.name, project_ticket_path(t.project, t) %></li>
		<% end %>
		</ul>
	<% else %>
		<p>No tickets.</p>
	<% end %>
</div>